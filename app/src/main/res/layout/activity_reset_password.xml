<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/activity_reset_password"
    tools:context="com.example.samman.locationdetactor.ResetPassword"
    android:background="#27b090">

    <EditText android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="90px"

        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/email_hint"
        android:background="@android:color/white"
        android:textSize="18sp"
        android:layout_above="@+id/ResetPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp">

    </EditText>

    <Button
        android:id="@+id/ResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:onClick="onButtonClick"
        android:background="#ebeef0"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="normal|bold"
        android:layout_marginBottom="202dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Button>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText3"
        android:text="We just need your email address we will sent in your  registered email for resiting your password"
        android:textAlignment="center"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/emailField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Forget Password"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:layout_above="@+id/editText3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white" />

</RelativeLayout>
